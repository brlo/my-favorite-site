<% if el[:id] %>
<h2 class='subject'>
  <%= el[:title] %>
</h2>
<% end %>

<div class='level'>
  <% if el[:pages].presence %>
    <div class='pages'>
      <% is_first = true %>
      <% el[:pages].each do |title, path| %><%= is_first ? (is_first=false; '') : ', ' %><a href='<%= path %>'><%= title %></a><% end %>
    </div>
  <% end %>

  <% if el[:children].presence %>
    <div class='items'>
      <% el[:children].each do |ch| %>
        <%= render(partial: 'quotes/tree_el', locals: {el: ch}) %>
      <% end %>
    </div>
  <% end %>
</div>
