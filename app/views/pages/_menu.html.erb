<% if items.present? %>
  <div class='items'>

    <% items.sort_by{ |i| i[:childs].present? ? 1:0 }.each do |item| %>

      <div class='<%= item[:childs].present? ? 'menu-subject' : 'menu-link' %> depth-<%= depth %>'>
        <% if item[:path].presence %>
          <a href="<%= my_page_link_to("/#{item[:path]}") %>"><%= item[:title] %></a>
        <% else %>
          <%= item[:title] %>
        <% end %>
      </div>

      <% if item[:childs].present? %>
        <div class='level'>
          <%= render(partial: 'pages/menu', locals: {items: item[:childs], depth: depth+1}) %>
        </div>
      <% end %>

    <% end %>
  </div>
<% end %>
