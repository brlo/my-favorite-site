<% if @page.present? %>
  <% content_for(:head) do %>
    <% og_image = @page.cover? ? @page.cover.large.url : my_res_link_to(@page.img_preview_file_path) %>
    <meta property="og:image" content="<%= og_image %>"/>
    <meta property="og:image:width" content="1200"/>
    <meta property="og:image:height" content="630"/>
    <meta property="og:type" content="book"/>
    <% @meta_book_tags&.each do |tag| %>
    <meta property="og:book:tag" content="<%= tag %>"/>
    <% end %>
    <meta name="keywords" content="<%= @meta_book_tags&.join(', ') %>" />
    <meta property="og:url" content= "<%= @canonical_url %>" />
    <meta property="og:locale" content= "<%= current_lang() %>" />
    <meta property="og:locale:alternate" content= "<%= ::I18n.locale == :ru ? 'en' : 'ru' %>" />
  <% end %>

  <h2><%= t('page_search.title') %> "<a href="<%= my_page_link_to("/#{@page.path}") %>"><%= @page.title %></a>"</h2>

  <form class='search-form' action="<%= my_page_link_to("/#{@page.path}/search") %>">
    <div class='search-tree-input-area'>
      <input
        class='pretty search-tree-input'
        name="t"
        type="text"
        required
        placeholder='<%= I18n.t("page.search_placeholder") %>'
        value='<%= @search_text %>'
        autocomplete="off"
      />
      <a class='search-icon'><svg width="20" height="20" viewBox="0 0 20 20"><path d="M14.386 14.386l4.0877 4.0877-4.0877-4.0877c-2.9418 2.9419-7.7115 2.9419-10.6533 0-2.9419-2.9418-2.9419-7.7115 0-10.6533 2.9418-2.9419 7.7115-2.9419 10.6533 0 2.9419 2.9418 2.9419 7.7115 0 10.6533z" stroke="currentColor" fill="none" fill-rule="evenodd" stroke-linecap="round" stroke-linejoin="round"></path></svg></a>
    </div>
  </form>

  <div class='hint'><%= t('search_page.matches') %>: <%= @matches_count %></div>
  <hr>

  <article>
  <% if @matches_count > 0 %>

    <% @matches.each do |m| %>
      <div class='line'>
        <% line_text = highlight(m[:text].to_s, @search_regexp) %>
        "<%= verse_alone_clean(line_text.html_safe) %>"<br/>
        (<a href="<%= my_page_link_to("/#{m[:path]}") %>"><%= m[:title] %></a>)
      </div>
      <br>
    <% end %>

  <% else %>
    <div class='tip'><%= I18n.t('tips.page_search_was_return_zero_results') %></div>
  <% end %>
  </article>
<% end %>

