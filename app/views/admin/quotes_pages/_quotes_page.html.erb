<div id="<%= dom_id quotes_page %>">
  <p>
    <strong>Заголовок:</strong>
    <%= quotes_page.title %>
  </p>

  <p>
    <strong>URL-путь:</strong>
    <%= quotes_page.path %>
  </p>

  <p>
    <strong>Язык:</strong>
    <%= quotes_page.lang %>
  </p>

  <p>
    <strong>Тема:</strong>
    <%= ::QuotesSubject.find_by(id: quotes_page.s_id).title_ru %>
  </p>

  <p>
    <strong>Статья:</strong>
    <br>
    <%= sanitize(quotes_page.body, tags: %w(div ul ol li h1 h2 blockquote b i strike u hr br a)).html_safe %>
  </p>

</div>
