<%= form_with(model: [:admin, quotes_subject]) do |form| %>
  <% if quotes_subject.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(quotes_subject.errors.count, "error") %> Ошибки при сохранении:</h2>

      <ul>
        <% quotes_subject.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class='large-block'>
    <%= form.label 'Позиция', style: "display: block" %>
    <%= form.number_field :position, step: 1 %>
  </div>

  <div class='large-block'>
    <%= form.label 'Заголовок', style: "display: block" %>
    RU 🇷🇺: <%= form.text_area :title_ru %><br>
    EN 🇺🇸: <%= form.text_area :title_en %><br>
    GR 🇬🇷: <%= form.text_area :title_gr %><br>
    JP 🇯🇵: <%= form.text_area :title_jp %>
  </div>

  <div>
    <%= form.label 'Описание', style: "display: block" %>
    RU 🇷🇺: <%= form.text_area :desc_ru %><br>
    EN 🇺🇸: <%= form.text_area :desc_en %><br>
    GR 🇬🇷: <%= form.text_area :desc_gr %><br>
    JP 🇯🇵: <%= form.text_area :desc_jp %>
  </div>

  <div class='large-block'>
    <%= form.label 'Родитель', style: "display: block" %>
    <%= form.select(:p_id, ::QuotesSubject.where(p_id: nil).pluck(:"title_#{ ::I18n.locale }", :id), {include_blank: 'Корневая тема'}, { :class => 'choices' }) %>
  </div>
<br>
  <div>
    <%= form.submit class: 'pretty btn' %>
  </div>
<% end %>
