[ <%= link_to "📚 Темы", admin_quotes_subjects_path %> ] —
[ <%= link_to "📝 Страницы", admin_quotes_pages_path %> ] —
<% if logged_in?() %>
  [ <a href='/ru/profile'>👤 <%= I18n.t('menu.profile') %></a> ]
<% else %>
  [ <a href="<%= login_path(locale: ::I18n.locale) %>">🔑 <%= I18n.t('menu.login') %></a> ]
<% end %>

<p style="color: green"><%= notice %></p>

<h1>Темы цитат</h1>
<%= link_to "＋ Новая тема", new_admin_quotes_subject_path %>
<br>
<br>
<div id="quotes_subjects">
  <% @quotes_subjects.each do |subject| %>
    <div class='quotes-subject'>
      <% title = "#{subject.title_ru} / #{ subject.title_en } / #{subject.title_gr} / #{subject.title_jp}" %>
      <%= subject.position %>. <b><%= link_to title, [:admin, subject] %></b><br>
      <% if subject.desc_ru.present? %>RU: <%= subject.desc_ru %><br><% end %>
      <% if subject.desc_en.present? %>EN: <%= subject.desc_en %><br><% end %>
      <% if subject.desc_gr.present? %>GR: <%= subject.desc_gr %><br><% end %>
      <% if subject.desc_jp.present? %>JP: <%= subject.desc_jp %><br><% end %>
      <br>
    </div>
  <% end %>
</div>

